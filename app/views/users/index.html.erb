<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-responsive bg-info">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <!--<th>Profile img</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.birthdate %></td>
        <!--<td><%#= user.profile_img %></td>-->
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) if user==current_user%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if user==current_user%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
