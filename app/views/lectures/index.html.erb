<section class="mbr-box mbr-section mbr-section--relative mbr-section--fixed-size mbr-section--full-height mbr-section--bg-adapted mbr-parallax-background mbr-after-navbar" id="header1-73" style="background-image: url(assets/images/macbook-926425-1920-1920x1279-92.jpg);">
  <div class="mbr-box__magnet mbr-box__magnet--sm-padding mbr-box__magnet--center-left">
    <div class="mbr-overlay" style="opacity: 0.6; background-color: rgb(76, 105, 114);"></div>
    <div class="mbr-box__container mbr-section__container container">
      <div class="mbr-box mbr-box--stretched"><div class="mbr-box__magnet mbr-box__magnet--center-left">
        <div class="row"><div class=" col-sm-6">
          <div class="mbr-hero animated fadeInUp">
              <h1 class="mbr-hero__text">ALL LECTURES </h1>
            <p class="mbr-hero__subtext">COURSERA provides variety of lectures in many courses  <br>
            All you need in one place
            </p>
          </div>
          <% if current_user.instractor? %>
        <div class="mbr-buttons btn-inverse mbr-buttons--left"><%= link_to 'Create New lecture', new_lecture_path,:class=>"mbr-buttons__btn btn btn-lg btn-default animated fadeInUp delay" %></div>
       <% end %>
        </div></div>
      </div></div>
    </div>
    <div class="mbr-arrow mbr-arrow--floating text-center">
      <div class="mbr-section__container container">
        <a class="mbr-arrow__link" href="#features1-75"><i class="glyphicon glyphicon-menu-down"></i></a>
      </div>
    </div>
  </div>
</section>
<section class="content-2 col-4" id="features1-75" style="background-color: rgb(255, 255, 255);">

  <div class="container">
    <div class="row">
      <% @lectures.each do |lecture| %>
    <div>
        <div class="thumbnail">
          <div class="image"><img class="undefined" src="/assets/images/google-slides-350x350-16.png"></div>
          <div class="caption">
            <div>
              <h3><p class="group"><%= link_to 'Show lecture', lecture ,:class=>"btn btn-info"%></p></h3>
              <h3>course: <%= lecture.course.title if lecture.course %> </h3>
              <p class="group">created by <%= link_to lecture.user.name , lecture.user,:class => "mbr-brand__name" if lecture.user%></p>
              <p class="group"><%= lecture.created_at %></p>
              <p>this is a lecture  </p>
            </div>
            <p class="group"><%= link_to 'Edit lecture', edit_lecture_path(lecture),:class=>"btn btn-warning" if lecture.user==current_user%> </p>
            <p class="group"><%= link_to 'Destroy lecture', lecture,{ method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger"} if lecture.user==current_user%></p>

          </div>
        </div>
      </div>
          <% end %>
    </div>
    <% if current_user.instractor? %>

  <%= link_to 'Create New lecture', new_lecture_path,:class=>"mbr-buttons__btn btn btn-lg btn-default animated fadeInUp delay" %>
  <% end %>
        </div>
</section>
