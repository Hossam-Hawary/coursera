<p id="notice"><%= notice %></p>

<h1>Listing Lectures</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Lec file</th>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <!--<td><%#= lecture.content %></td>-->
        <td><%= lecture.lec_file %></td>
        <td><%= lecture.course.title if lecture.course %></td>
        <td><%= lecture.user.name %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture) if lecture.user==current_user%></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } if lecture.user==current_user%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

