<section class="mbr-box mbr-section mbr-section--relative mbr-section--fixed-size mbr-section--full-height mbr-section--bg-adapted mbr-after-navbar" id="header1-40" data-bg-video="http://www.youtube.com/watch?v=uNCr7NdOJgw">
  <div class="mbr-box__magnet mbr-box__magnet--sm-padding mbr-box__magnet--center-left">
    <div class="mbr-overlay" style="opacity: 0.6; background-color: rgb(76, 105, 114);"></div>
    <div class="mbr-box__container mbr-section__container container">
      <div class="mbr-box mbr-box--stretched"><div class="mbr-box__magnet mbr-box__magnet--center-left">
        <div class="row"><div class=" col-sm-6">
          <div class="mbr-hero animated fadeInUp">
            <h1 class="mbr-hero__text">Coursera</h1>
            <p class="mbr-hero__subtext">Coursera is a project had been built usign Rouby On Rails Framework <br>
                ALL YOU NEED IN ONE PLACE
            </p>
          </div>
          <% if current_user.instractor? %>
        <div class="mbr-buttons btn-inverse mbr-buttons--left"><%= link_to 'Create New Course', new_course_path,:class=>"mbr-buttons__btn btn btn-lg btn-default animated fadeInUp delay" %></div>
        <% end %>
              </div>
        </div>
      </div>
      </div>
    </div>
    <div class="mbr-arrow mbr-arrow--floating text-center">
      <div class="mbr-section__container container">
        <a class="mbr-arrow__link" href="#features1-44"><i class="glyphicon glyphicon-menu-down"></i></a>
      </div>
    </div>
  </div>
</section>

<section class="pricing-table-1 col-4" id="features1-44" style="background-color: rgb(28, 73, 110);">


  <div class="container">
    <div class="row">
      <% @courses.each do |course| %>

    <div>
        <div class="plan orange" style="height: 360px;margin-bottom: 10px">
          <h3><p class="group"><%= link_to course.title, course ,:class=>"btn btn-info"%></p></h3>
          <p class="price">
          <!--<div class="image"><img class="undefined" src="/assets/images/google-slides-350x350-16.png"></div>-->
          </p>
          <div><ul>
            <li class="group">created by <%= link_to course.user.name , course.user,:class => "mbr-brand__name" if course.user%></li>
            <li class="group"><%= link_to 'Edit', edit_course_path(course),:class=>"btn btn-warning" if course.user==current_user%> </li>
            <li class="group"><%= link_to 'Destroy', course,{ method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger"} if course.user==current_user%></li>
          </ul></div>
        </div>
      </div>

<% end %>
    </div>
    <% if current_user.instractor? %>
        <%= link_to 'Create New Course', new_course_path,:class=>"mbr-buttons__btn btn btn-lg btn-default animated fadeInUp delay" %>
    <% end %>
  </div>
</section>
